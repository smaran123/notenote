- @notes.each do |note| 
	%h2= note.title 
	%p= note.content 
	%p= time_ago_in_words( note.created_at)
	= link_to "Show", note_path(note)
	= link_to "Edit", edit_note_path(note)
	= link_to "delete", note_path(note), :method => :delete, :data => {:confirm => "are you sure?"}
	%br/
= link_to "New", new_note_path

